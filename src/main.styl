.loading {
  align-items: center;
  display: flex;
  font-size: 2em;
  height: 12em;
  justify-content: center;
}

header {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 1em 1em 0 0;

  .accordion-header svg {
    width: 1em;
    margin-right: 0.5em;
  }

  .filters,
  .sorting {
    margin-bottom: 1em;
    margin-left: 1em;
    min-width: 25em;
    width: calc(50% - 1em);

    .badge {
      margin-left: 0.5em;
    }
  }

  .filters {
    .list-group {
      display: grid;
      grid-template-columns: max-content auto;
    }

    li.list-group-item {
      display: contents;
      padding: 0.5em;
    }

    label,
    input,
    .select {
      margin: 0.3em;
    }

    label {
      align-self: center;
    }

    input {
      border: solid 1px hsl(0, 0%, 80%);
      border-radius: 4px;
      padding: 4px 8px;
    }
  }

  .sorting {
    .accordion-body {
      padding-left: 0;
      padding-right: 0;
    }

    .list-group-item {
      border: none;
      display: flex;

      .select {
        margin-right: 0.5em;
      }

      .sorting-key {
        flex-grow: 2;
      }

      .sorting-direction {
        min-width: 6em;
      }

      button {
        align-items: center;
        display: flex;
        justify-content: center;
        padding: 0.5em;

        svg {
          width: 1em;
        }
      }
    }
  }
}

.new-badge {
  color: var(--bs-green);
}

.new-text {
  color: white;
}

.stats {
  .alert {
    display: flex;

    > div {
      margin-right: 1em;
    }
  }

  svg {
    margin-right: 0.5em;
    width: 1em;
  }

  .stat {
    align-items: center;
    display: flex;
  }

  .stat-showing svg {
    color: var(--bs-blue);
  }
}

.dogs {
  .card-wrapper {
    display: flex;
    margin-bottom: 1em;
  }

  .card {
    display: flex;
    min-width: 14em;
    max-width: 20em;
    position: relative;

    img {
      aspect-ratio: 1 / 1;
    }

    .mark-seen-button,
    .toggle-favorite-button {
      border: none;
      border-radius: 50%;
      position: absolute;
      top: 0.3em;
    }

    .mark-seen-button {
      background: none;
      display: none;
      left: 0.3em;
      padding: 0;
      width: 2.9em;
      height: 2.9em;

      &:hover .new-badge {
        color: #165236;
      }
    }

    &.dog-is-new .mark-seen-button {
      display: block;
    }

    .toggle-favorite-button {
      background: rgba(255, 255, 255, 0.7);
      padding: 0.4em;
      right: 0.3em;
      width: 2.5em;
      height: 2.5em;

      &:hover {
        background: rgb(200, 200, 200, 0.7);
      }

      .heart-stroke {
        color: #333;
      }

      .heart-fill {
        color: transparent
      }
    }

    &.dog-is-favorite .toggle-favorite-button {
      background: white;

      &:hover {
        background: #c8c8c8;
      }

      .heart-stroke,
      .heart-fill {
        color: rgb(192, 24, 111);
      }
    }

    h5 {
      padding: 0.4em 0.8em 0;
    }
  }

  .card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 2;

    svg {
      flex-shrink: 0;
      width: 1em;
    }
  }

  .list-group-item {
    align-items: center;
    display: flex;

    svg {
      margin-right: 0.3em;
    }
  }

  a {
    align-items: center;
    display: flex;
    justify-content: center;

    svg {
      margin-left: 0.6em;
      position: relative;
      top: -1px;
    }
  }

  .spacer {
    flex-grow: 2;
  }
}
